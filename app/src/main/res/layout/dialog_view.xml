<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="2dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        >


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:hint="NAME"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="20sp"
            app:met_floatingLabel="normal"
            app:met_floatingLabelPadding="5dp"
            app:met_floatingLabelTextColor="@android:color/holo_red_dark"
            app:met_floatingLabelTextSize="18sp"

            app:met_minCharacters="2" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:hint=" INSTITUTE NAME"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="20sp"
            app:met_floatingLabel="normal"
            app:met_floatingLabelPadding="5dp"
            app:met_floatingLabelTextColor="@android:color/holo_red_dark"
            app:met_floatingLabelTextSize="18sp"
            app:met_iconLeft="@drawable/ic_institute"
            app:met_minCharacters="2" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="NAME"
            android:editable="false"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="20sp"
            app:met_floatingLabel="normal"
            app:met_floatingLabelPadding="5dp"
            app:met_floatingLabelTextColor="@android:color/holo_red_dark"
            app:met_floatingLabelTextSize="18sp"
            app:met_iconLeft="@drawable/ic_calendar"
            app:met_minCharacters="2" />

    </LinearLayout>

</androidx.cardview.widget.CardView>